:host
    display block
    position absolute
    top 0
    bottom 0
    left 0
    right 0

.map-container
    height 100%

.menu-button
    position fixed
    right .5em
    top .5em

.location-button
    position fixed
    right 1em
    bottom 1em

.rack-details
    position fixed
    bottom -4px
    left .5em
    right .5em
    display flex
    flex-direction column
    margin auto
    max-width 480px
    max-height 50vh
    overflow hidden

.rack-details__img
    display block
    object-fit cover
    object-position center
    flex-shrink 1
    flex-grow 1
    min-height 30px

.rack-details__body
    display block
    flex-shrink 0
    flex-grow 0
