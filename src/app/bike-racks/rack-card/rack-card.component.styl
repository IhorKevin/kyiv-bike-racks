:host
    display block

.rack-details
    position fixed
    bottom -4px
    left .5em
    right .5em
    display flex
    flex-direction column
    margin auto
    max-width 480px
    max-height 50vh
    overflow hidden

.rack-details__img
    display block
    object-fit cover
    object-position center
    flex-shrink 1
    flex-grow 1
    min-height 30px

.rack-details__body
    display block
    position relative
    flex-shrink 0
    flex-grow 0

.rack-details__route-button
    position absolute
    top -16px
    right 0
    transform translateY(-50%)

.rack-details__actions
    text-align right

.rack-details__table tr td:first-child
    vertical-align top
    padding-right 5px
    font-weight 500
